class Pessoa:
    def __init__(self, Cliente, CPF, Conta):
        self.cliente = Cliente
        self.cpf = CPF

class Conta:
    def __init__(self, saldo, pessoa ):
        self.saldo = saldo
        self.pessoa = Pessoa

    def setsaldo (self, saldonovo):
        self.saldo = saldonovo

    def getsaldo (self):
            return self._saldo

    def saque (self, valor):
        if self.saldo >= valor:
            self.saldo -= valor
            
    def deposito (self, valor):
        self.saldo += valor
       
class ContaCorrente (Conta):
    def pagataxa (self, taxa):
        self.saldo += (self.saldo - taxa)
    
class ContaPoupanca (Conta):
    def depositar (self, taxa)
        self.saldo += (self.saldo * taxa)

objpessoa = Pessoa ("Adria, 91199933320, 123456")
objcc = ContaCorrente ("") #falta ligar o objeto a pessoa
objcp = ContaPoupanca ("")

Conta.Taxado()
